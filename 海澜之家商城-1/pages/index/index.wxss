.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 80rpx;
  background: #edece8;
  width: 100%;
}

.select {
  margin-top: 10rpx;
  background: #fff;
  width: 90%;
  height: 50rpx;
  font-size: 18rpx;
}

.sroll_top_view {
  width: 750rpx;
  height: 34vh;
}

.img {
  width: 750rpx;
  height: 380rpx;
}

.kinds {
  height: 450rpx;
  margin-bottom: 50rpx;
}

.kinds_01 {
  width: 152rpx;
  height: 210rpx;
  display: inline-block;
  float: left;
  margin-left: 26rpx;
  margin-top: 20rpx;
}

.kinds_img {
  width: 152rpx;
  height: 152rpx;
}

.kinds_01 p {
  font-size: 25rpx;
  margin-left: 30rpx;
}

.kinds_01 .p_01 {
  margin-left: 35rpx;
}

.kinds_01 .p_02 {
  margin-left: 50rpx;
}

