  width: 49%;
  height: 480rpx;
  display: inline-block;
  float: left;
  margin-right: 7rpx;
}

.clothes_sell {
  margin-left: 3%;
  width: 96%;
  background: red;
  margin-top: 14rpx;
}

.clothes_sell_img {
  width: 355rpx;
  height: 355rpx;
}

.sell_p_01 {
  display: block;
  overflow: hidden;
