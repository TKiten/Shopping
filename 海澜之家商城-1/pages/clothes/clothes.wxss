.sroll_top_view {
  width: 750rpx;
  height: 62vh;
}

.carts-icon{
    position: absolute;
    right: 40rpx;
    top: 40rpx;
    width: 75rpx;
    height: 75rpx;
    z-index: 5;
}

.carts-icon image{
    width: 100%;
    height: 100%;
    border-radius: 50%;
}
.carts-icon.on{
    -webkit-animation: to_cart_scale .3s ease;
    animation: to_cart_scale .3s ease;
}
.carts-icon-num{
    position: absolute;
    left: -15rpx;
    width: 40rpx;
    height: 40rpx;
    line-height: 40rpx;
    border-radius: 50%;
    background: red;
    color: #fff;
    font-size: 24rpx;
    text-align: center;
}

